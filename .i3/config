# i3 options:
set $mod Mod4
font pango: Terminess Regular 10
floating_modifier $mod
default_orientation horizontal 
hide_edge_borders both
#workspace_layout stacking
new_window none
new_float normal 2
workspace_auto_back_and_forth yes
force_focus_wrapping yes
focus_follows_mouse no

# app binds:
bindsym $mod+Return exec terminology
bindsym $mod+d exec --no-startup-id dmenu_run
#bindsym $mod+x exec --no-startup-id 
#bindsym $mod+z exec --no-startup-id passmenu -p "copy:" -font "Share 10" -bw "3"
bindsym Control+Mod1+Delete exec $TERMINAL -t htop -e htop
bindsym $mod+Print exec --no-startup-id maim -d 3 ~/images/screenshots/$(date +%F-%T).png
bindsym $mod+Shift+Print exec --no-startup-id maim -s ~/images/screenshots/$(date +%F-%T).png
#bindsym --release $mod+F1 exec --no-startup-id 
#bindsym $mod+F2 exec --no-startup-id pacman-checkupdates
bindsym XF86TouchpadToggle exec --no-startup-id synclient TouchpadOff=1
bindsym XF86AudioPrev exec --no-startup-id "mocp -r"
bindsym XF86AudioNext exec --no-startup-id "mocp -f"
bindsym XF86AudioPlay exec --no-startup-id "mocp -G"
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer sset Master 5%+"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer sset Master 5%-"
bindsym XF86AudioMute exec --no-startup-id "amixer set Master toggle"
bindsym $mod+Tab exec --no-startup-id rofi -show "window" -font "Share 10" -bw "3"

## autostart apps:

#fonts for status bar
exec --no-startup-id xset +fp /usr/share/fonts/terminus/
exec --no-startup-id xset fp rehash

#compositing(transparency) and wallpaper
exec --no-startup-id xcompmgr
exec --no-startup-id nitrogen --restore

#basic apps
exec --no-startup-id urxvt -e mocp
exec --no-startup-id chromium
exec --no-startup-id terminology -e htop
exec --no-startup-id xterm -e ranger
#exec i3-msg workspace 3:web

