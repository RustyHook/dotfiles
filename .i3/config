      background #150b30 
      statusline #807878
      focused_workspace #150b30 #150b30 #3dafcb
      active_workspace #807878 #150b30 #150b30
      inactive_workspace #150b30 #150b30 #807878
      urgent_workspace #7627a5 #7627a5 #150b30
	}
}
